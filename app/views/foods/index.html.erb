			<!-- Inner Content -->
			<div class="inner-page padd">
				
				<!-- Shopping Start -->
				
				<div class="shopping">
					<div class="container">
						<!-- Shopping items content -->
						<div class="shopping-content">
							<div class="row">
								<% @foods.each do |food|%>
									<div class="col-md-3 col-sm-6">
										<!-- Shopping items -->
										<div class="shopping-item">
											<!-- Image -->
											<%= image_tag food.food_image.url ,class: "img-responsive"%>
											<!-- Shopping item name / Heading -->
											<h4 class="pull-left"><%= link_to food.name,food_path(food)%></h4>
											<span class="item-price pull-right">$<%= food.price%>
											<!-- Paragraph -->
											<p><%= food.short_description%></p>
											<!-- Buy now button -->
											<div class="visible-xs">
												<a class="btn btn-danger btn-sm" href="#">Buy Now</a>
											</div>
											<!-- Shopping item hover block & link -->
											<div class="item-hover br-red hidden-xs"></div>
											<!-- <a class="link hidden-xs" href="#">Add to cart</a> -->
											
											<% a = @cart_item.variant_id = food.active_variants.first.try(:id)%>

											<%= link_to "Add to cart",shopping_cart_items_path(:variant_id => a,:quantity => '1'),class: "link hidden-xs", :method => :post%>
										</div>
									</div>
								<%end%>
							</div>
							
							<!-- Pagination -->
							<div class="shopping-pagination">
								<ul class="pagination">
									<li class="disabled"><a href="#">&laquo;</a></li>
									<li class="active"><a href="#">1 <span class="sr-only">(current)</span></a></li>
									<li><a href="#">2</a></li>
									<li><a href="#">3</a></li>
									<li><a href="#">4</a></li>
									<li><a href="#">5</a></li>
									<li><a href="#">&raquo;</a></li>
								</ul>
							</div>
							<!-- Pagination end-->
						</div>
					</div>
				</div>
				
				<!-- Shopping End -->

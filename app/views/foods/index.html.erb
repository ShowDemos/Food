<script type="text/javascript">
	$(function(){
    $container = $('#container');
    var filterThem = function(selector) {
         $container.isotope({ filter: selector, layoutMode: 'straightDown' });
    };
    $('a#filter').click(function(e){
        var selector = $(this).attr('data-filter');
        filterThem(selector);
    });

    filterThem("*");
});
</script>
<tr>
  <td class="cart_product">
    <%= link_to (image_tag item.variant.food.food_image.url(:thumb)),food_path(item.variant.food)%>
    <h4><a href=""><%= item.variant.food.name%></a></h4>

  </td>
  <td class="cart_price">
    <p><%= number_to_currency item.price %></p>
  </td>
  <td class="cart_quantity">
    <div class="cart_quantity_button">
      <a class="cart_quantity_up" href=""> + </a>
      <%= cart_items_form.text_field :quantity, :size=>"2",class: 'cart_quantity_input' %>
      <a class="cart_quantity_down" href=""> - </a>
    </div>
  </td>
  <td class="cart_total">
    <p class="cart_total_price"><%= number_to_currency item.total %></p>
  </td>
  <td class="cart_delete">
    <%= link_to '<i class="fa fa-times"></i>'.html_safe, shopping_cart_item_path(item, :variant_id => item.variant_id), :method => :delete ,class: 'cart_quantity_delete'%>
  </td>
</tr>
<div class="main-content">
  <div class="container">     
    <!-- inner page content -->
    <div class="inner-content">
      <%= render 'shared/myaccount_subheader'%>
        <div class="col-md-9 col-sm-9">
          <!-- inner main content area -->
          <div class="inner-main account">
            <!-- top heading -->
            <h2>Edit Profile</h2>
            <div class="form-group">
              <label for="inputName" class="col-md-2 control-label">FirstName</label>
              <div class="col-md-8">
                <%= f.text_field :firstname,class: 'form-control', placeholder: 'FirstName' %>
              </div>
            </div>
            <div class="form-group">
              <label for="inputName" class="col-md-2 control-label">LastName</label>
              <div class="col-md-8">
                <%= f.text_field :lastname,class: 'form-control', placeholder: 'LastName' %>
              </div>
            </div>
            <div class="form-group">
              <label for="inputName" class="col-md-2 control-label">Email</label>
              <div class="col-md-8">
                <%= f.text_field :email,class: 'form-control', placeholder: 'Email' %>
              </div>
            </div>
            <div class="form-group">
              <label for="inputName" class="col-md-2 control-label">Password</label>
              <div class="col-md-8">
                <%= f.password_field :password,class: 'form-control' %>
              </div>
            </div>
            <div class="form-group">
              <label for="inputName" class="col-md-2 control-label">Password_confirmation</label>
              <div class="col-md-8">
                <%= f.password_field :password_confirmation,class: 'form-control'%>
              </div>
            </div>            
            <div class="form-group">
              <div class="col-md-offset-2 col-md-8">
                <%= f.submit 'Update', :class => 'btn btn-danger btn-sm' %>&nbsp;  
              </div>
            </div>
        </div>
      </div>
    </div>
    <!-- inner page content end -->          
  </div>
</div>
<!-- main content end -->